<div class="container d-flex justify-content-center">
  <div class="auth-form">
    <h2 class="auth-head">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me,
                      as: :boolean if devise_mapping.rememberable?%>
      </div>

      <div class="form-actions auth-btn-container">
        <%= f.button :submit, "Log in", class:"auth-btn" %>
      </div>
    <% end %>
    <div class="auth-btn-container">
      <%= link_to "Sign up", new_registration_path(resource_name), class:"auth-btn-back"%>
    </div>
  </div>
</div>
